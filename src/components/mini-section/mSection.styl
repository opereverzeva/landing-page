.mSection{
    width 280px
    position: relative
    &__bigger{
        width 380px 
        
    }
    &__header, &__header1{
        color: var(--header-color)
        font-family: var(--header-font)
        font-size: 26px
        text-transform: uppercase
        line-height: 26px;
        font-weight: 900;
        padding 0
        margin: 0
        &_bigger{
            font-size: 40px;
            letter-spacing: -2px;
            line-height: 46px;
        }
    }
    &__description{
        color: var(--pharagraph-color)
        font-family: var(--pharagraph-font)
        font-size: 15px
        line-height 22px
        padding-top 20px 
        padding-bottom 30px
        width 260px
        &_bigger{
            width 370px
        }
    }
    &__mini-header{
        font-size: 16px;
        line-height: 20px;
        color: var(--header-color)
        font-family: var(--pharagraph-font)
        font-weight: 400;
        margin-top 10px
    }
    &__more{
        border: none
        color: var(--attension-color)
        font-size: 14px
        text-transform: uppercase
        font-size: 14px;
        line-height: 20px;
        font-family: var(--header-font)
        font-weight: 700;
        transition: 0.3s
        background-color: white
        &:hover{
            font-weight: 400;
            transition: 0.3s
        }
        &_hidden{
        display: none    
    }
    }
    &__link{
        text-decoration none
        color: inherit    
    }
    
}