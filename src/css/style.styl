@import 'normalize.css';

*{
    margin 0
    padding 0
    box-sizing: border-box
}

:root{
    --header-color:#314a5b
    --pharagraph-color:#9aa0ab
    --attension-color:#fa5c65

    --header-font: 'Montserrat', sans-serif
    --pharagraph-font:'Open Sans', sans-serif
}

body{
    display flex
    flex-direction: column
    justify-content flex-start
    align-items: flex-start
    height 100%
    width 100%
    position relative
}
.container{
    width 940px
    position relative
}

li{
    list-style none
}

a{
    text-decoration: none 
    color inherit
}

.red-dot{
    color var(--attension-color) 
    margin-left -3px   
}

.title-page{
    width 100%
    height 100vh
    background: url('../img/Gradient.png') 
    -moz-background-size: cover; /* Firefox 3.6+ */
    -webkit-background-size: cover; /* Safari 3.1+ Ð¸ Chrome 4.0+ */
    -o-background-size: cover; /* Opera 9.6+ */
    background-size: cover;
    display flex
    justify-content: center
    &__header{
       display flex
       justify-content: space-between
       align-items: flex-start
    }
    &__logo{
        width: 140px
        height: 74px
        border-radius:0 0 8px 8px
        background-color var(--attension-color)
        cursor pointer
    }
    &__name-logo{
        font-size: 20px;
        line-height: 64px;
        color: #ffffff;
        font-family: "Domine";
        font-weight: 700;
        text-align: center;
        padding-top 22px
        user-select none
    }
    &__dot{
        color: black    
    }
    &__navbar{
        width 460px
        height 100%
        display flex
        justify-content: space-between
    }
    &__link{
        font-size: 14px;
        line-height: 85px;
        color: #263742;
        font-family: var(--header-font)
        font-weight: 700;
        text-align: right;
        text-transform: uppercase
        cursor pointer
        transition: 0.3s
        &:hover{
            opacity 0.6
            transition: 0.3s    
        }
    }
    &__icon{
       color var(--attension-color)
       width 20px 
       height 16px
       transform: scale(1.2)
    }
    &__main{
        margin-top 300px
    }
    &__title{
        font-size: 48px;
        letter-spacing: -2px;
        line-height: 53px;
        color: var(--header-color)
        font-family: var(--header-font)
        font-weight: 700;
        text-transform: uppercase   
    }
    &__slogan{
        font-size: 20px;
        line-height: 40px;
        color: var(--header-color)
        font-family: var(--pharagraph-font)
        font-weight: 400; 
        margin-top 10px   
    }
    &__button-read{
        margin-top 30px
        width: 171px;
        height: 64px;
        border-radius: 7px;
        background-color: var(--attension-color)
        border: none 
        cursor pointer
        transition: 0.3s
        &:hover{
            opacity 0.8
            transition: 0.3s    
        }
    }
    &__button-text{
        font-size: 15px;
        line-height: 48px;
        color: #ffffff;
        font-family: var(--pharagraph-font)
        font-weight: 700;   
        user-select none 
        text-transform: uppercase
    }
}

.main-page{
    width 100%
    display flex
    justify-content: center
    background-size: cover;
    position relative
    margin-bottom: 60px
    &__navbar{
        display flex
        justify-content: space-between
        align-items: center
        margin-top 80px    
    }
    &__presentation{
        display flex
        justify-content: flex-start
        align-items: center
        margin-top 100px
        margin-bottom 100px
    }
    &__window{
        height 290px
        width 390px
        overflow hidden
        margin-right 100px
    }
    &__view{
        margin-left -130px    
    }
    &__photo{
        display flex
        justify-content: space-between
        align-items: center  
        margin-bottom 50px  
    }
    &__button{
        text-align right     
    }
}
.footer{
    width 100%
    display flex
    justify-content: center
    position relative
    height: 90px
    
    &__content{
        width 100%
        box-sizing: border-box
        border-top: 1px solid #b9c0c6;
        display flex
        justify-content: space-between
        font-size: 13px;
        line-height: 60px;
        color: #b9c0c6;
        font-family: var(--pharagraph-font)
        font-weight: 400;
        text-align: right;

    }
    &__navbar{
        display flex
        justify-content: space-between
        width 140px
    }
    &__address{
        font-style: normal 
    }
    &__item-navbar{
        display flex
        justify-content: center
        align-items: center 
        width 16px
        height 100%  
    }
    &__icon{
        cursor pointer
        transform: scale(1.3)
        transition: 0.3s
        &:hover{
            color: var(--pharagraph-color)
            transition: 0.3s
        }
    }
}